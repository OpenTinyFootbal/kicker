<templates id="template" xml:space="preserve">
    <!-- Pages -->
    <t t-name="Dashboard">
        <div class="col-md-12 o_kicker_main">
            <h4>Hello <t t-esc="widget.name || 'darling'"/>,</h4>
            <h6>You suck at this. Please stop.</h6>
            <div class="o_score_card panel">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-xs-6">
                            <h4><t t-esc="widget.wins || '--'"/></h4>
                            <h6>Won matches</h6>
                        </div>
                        <div class="col-xs-6">
                            <h4><t t-esc="widget.losses || '--'"/></h4>
                            <h6>Lost matches</h6>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <button class="btn btn-primary btn-lg btn-block">Add Score</button>
                </div>
            </div>
            <label>Your Stats</label>
            <div class="panel">
                <div class="panel-body">
                    <div class="ct-chart ct-perfect-fourth"></div>
                </div>
            </div>
            <label>Your Best Teammates</label>
            <div class="container">
                <div t-if="widget.teammates" class="row o_kicker_user_row">
                    <t t-foreach="widget.teammates" t-as="user">
                        <t t-call="UserCard">
                            <t t-set="card_class" t-value="'o_kicker_user_card'"/>
                        </t>
                    </t>
                </div>
            </div>
            <label>Your Worst Nightmares</label>
            <div class="container">
                <div t-if="widget.nightmares" class="row o_kicker_user_row">
                    <t t-foreach="widget.nightmares" t-as="user">
                        <t t-call="UserCard">
                            <t t-set="card_class" t-value="'o_kicker_user_card'"/>
                        </t>
                    </t>
                </div>
            </div>
        </div>
    </t>
    
    <t t-name="Profile">
        <div class="col-md-12 o_kicker_main">
            <div class="text-center">
                <div class="text-right mb8 mt8">
                    <div class="btn btn-xs">Update Profile <i class="fa fa-pencil"/></div>
                </div>
                <img src="/kicker/avatar/" class="img-circle"/>
                <h3>Damien Bouvy</h3>
                <h6>You suck at this. Please stop.</h6>
            </div>
        </div>
    </t>

    <t t-name="Community">
        <div class="col-md-12 o_kicker_main">
            <h4>Community</h4>
            <label>You played often with</label>
            <div class="container">
                <div t-if="widget.usual" class="row">
                    <t t-foreach="widget.usual" t-as="user">
                        <t t-call="UserCard">
                            <t t-set="user.fav" t-value="user.name.indexOf('e') !== -1"/>
                            <t t-set="card_class" t-value="'col-xs-6 col-md-3 col-lg-2'"/>
                        </t>
                    </t>
                </div>
            </div>
            <label>You never played against</label>
            <div class="container">
                <div t-if="widget.rare" class="row">
                    <t t-foreach="widget.rare" t-as="user">
                        <t t-call="UserCard">
                            <t t-set="user.fav" t-value="user.name.indexOf('e') !== -1"/>
                            <t t-set="card_class" t-value="'col-xs-6 col-md-3 col-lg-2'"/>
                        </t>
                    </t>
                </div>
            </div>
        </div>
    </t>

    <!--  Components -->
    <t t-name="UserCard">
        <div t-attf-class="{{ card_class}} test">
            <div class="panel text-center">
                <div class="panel-body">
                    <t t-if="user.hasOwnProperty('fav')">
                        <i t-attf-class="o_kicker_user_fav fa {{ user.fav ? 'fa-heart':'fa-heart-o'}}"/>
                    </t>
                    <p>
                        <img t-attf-src="/kicker/avatar/{{ user.id }}" class="img-circle" width="64px"/>
                    </p>
                    <p t-esc="user.name"/>
                    <small class="text-muted">Catchy phrase</small>
                </div>
            </div>
        </div>
    </t>

</templates>